{
  "name": "dega-themes",
  "license": "MIT",
  "private": true,
  "keywords": [
    "gatsby",
    "gatsby-theme",
    "gatsby-plugin",
    "factly"
  ],
  "bugs": {
    "url": "https://github.com/factly/dega-themes/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/factly/dega-themes.git"
  },
  "workspaces": [
    "themes/*",
    "examples/*",
    "plugins/*",
    "...www/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check \"**/*.{js,jsx,yml,yaml,json,css,scss,md}\"",
    "format": "prettier --write \"**/*.{js,jsx,yml,yaml,json,css,scss,md}\"",
    "health": "yarn workspace factly-health",
    "english": "yarn workspace factly-english",
    "vidcheck": "yarn workspace vidcheck",
    "youtube": "yarn workspace factly-youtube",
    "source-vidcheck": "yarn workspace gatsby-source-vidcheck",
    "athena": "yarn workspace athena",
    "harpy": "yarn workspace factly-harpy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format"
    }
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-wesbos": "^3.0.2",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1"
  }
}
